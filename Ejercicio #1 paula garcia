#FUNCIONES 
base= 5
altura=10

def encontrar_area(base, altura):
    area=(base * altura)/2
    return area

def dar_resultado(area):
    print(f"El resultado es: {area}")
  
def mensaje(area):
    print("el area fue encontrada")
    
#zona de codigo principal

if __name__=="__main__":
   print("CALCULA EL AREA DE UN TRIANGULO\n")

   area_triangulo = encontrar_area(base, altura)
   
   dar_resultado(area_triangulo)
   mensaje(area_triangulo)



   